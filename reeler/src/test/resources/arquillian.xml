<?xml version="1.0"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian
                http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
    <!-- Sets the protocol which is how Arquillian talks and executes the tests inside the container -->
    <defaultProtocol type="Servlet 3.0" />
    <engine>
        <property name="deploymentExportPath">target/</property>
    </engine>
    <container qualifier="remote_container" default="true">
        <configuration>
            <property name="chameleonTarget">wildfly:10.1.0.Final:remote</property>
            <property name="managementAddress">192.168.1.120</property>
            <property name="managementPort">10990</property>
            <property name="username">admin</property>
            <property name="password">adminadmin1</property>
            <property name="allowConnectingToRunningServer">true</property>
        </configuration>
    </container>
</arquillian>

